<br/>
<div class="row">
  <div class="col-lg-6">
    <%= link_to t('buttons.voltar'), produtos_path, :class=>"btn btn-sm btn-default" %>
  </div>
</div>
<br/>

<%= render_alerts @produto %>
<br>

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
      <%= @operacao %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_with(model: produto, local: true) do |form| %>          
              <div class="form-group">
                <%= form.label :descricao %>
                <%= form.text_field :descricao, id: :produto_descricao, :class=>"form-control" %>
              </div>

              <div class="form-group">
                <%= form.label :preco_compra %>
                <%= form.text_field :preco_compra, id: :produto_preco_compra,:class=>"form-control currency" %>
              </div>

              <div class="form-group">
                <%= form.label :preco_venda %>
                <%= form.text_field :preco_venda, id: :produto_preco_venda, :class=>"form-control currency" %>
              </div>

              <div class="actions">
                <button type="submit" class="btn btn-sm btn-primary"><%= t('buttons.gravar') %></button>
              </div>
            <% end %>
          </div>
        </div>
        <!-- /.row (nested) -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>
