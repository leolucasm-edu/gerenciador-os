<br/>
<div class="row">
  <div class="col-lg-6">
    <%= link_to t('buttons.voltar'), produtos_path, :class=>"btn btn-sm btn-default" %>
    <%= link_to t('buttons.editar'), edit_produto_path(@produto.id), :class=>"btn btn-sm btn-primary" %>
  </div>
</div>
<br/>

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
      <%= @operacao %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_with(model: @produto, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :descricao %>
              <%= form.text_field :descricao, id: :produto_descricao, :class=>"form-control show", :readonly=>"true" %>
            </div>

            <div class="form-group">
              <%= form.label :preco_compra %>
              <%= form.text_field :preco_compra, id: :produto_preco_compra, :class=>"form-control currency show", :readonly=>"true" %>
            </div>

            <div class="form-group">
              <%= form.label :preco_venda %>
              <%= form.text_field :preco_venda, id: :produto_preco_venda, :class=>"form-control currency show", :readonly=>"true" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
