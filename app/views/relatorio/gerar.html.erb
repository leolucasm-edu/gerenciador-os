<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Relatório - Visualização</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
        <table class="table table-sm">
          <thead>
            <tr>
              <th>Cliente</th>
              <th>CPF/CNPJ</th>
              <th>Funcionário</th>
              <th>Data de Abertura</th>
              <th>Previsão</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @ordens_servico.each do |ordem_servico| %>
              <tr>
                <td><%= ordem_servico.cliente.nome %></td>
                <td><%= ordem_servico.cliente.cpf_cnpj %></td>
                <td><%= ordem_servico.funcionario.nome %></td>
                <td><%= datef(ordem_servico.created_at) %></td>
                <td><%= ordem_servico.data_previsao %></td>
                <td>
                  <% if ordem_servico.get_status == 'Encerrada' %>
                    <span class="label label-success">
                      <%= ordem_servico.get_status %>
                    </span>
                  <% else %>
                    <span class="label label-warning">
                      <%= ordem_servico.get_status %>
                    </span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>

<br/>
