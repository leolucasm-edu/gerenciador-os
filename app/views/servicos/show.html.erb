<br/>
<div class="row">
  <div class="col-lg-6">
    <%= link_to t('buttons.voltar'), servicos_path, :class=>"btn btn-sm btn-default" %>
    <%= link_to t('buttons.editar'), edit_servico_path(@servico.id), :class=>"btn btn-sm btn-primary" %>
  </div>
</div>
<br/>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
      <%= @operacao %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_with(model: @servico, local: true) do |form| %>
            <div class="form-group">
              <%= form.label Servico.human_attribute_name("descricao") %>
              <%= form.text_field :descricao, id: :servico_descricao, :class=>"form-control", :readonly=>"true" %>
            </div>

            <div class="form-group">
              <%= form.label Servico.human_attribute_name("preco_hora") %>
              <%= form.text_field :preco_hora, id: :servico_preco_hora, :class=>"form-control valor_monetario", :readonly=>"true" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
