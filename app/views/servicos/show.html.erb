<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Servi√ßos</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
      <%= @operacao %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_with(model: @servico, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :descricao %>
              <%= form.text_area :descricao, id: :servico_descricao, :class=>"form-control", :readonly=>"true" %>
            </div>

            <div class="form-group">
              <%= form.label :preco_hora %>
              <%= form.text_field :preco_hora, id: :servico_preco_hora, :class=>"form-control valor_monetario", :readonly=>"true" %>
            </div>

            <div class="actions">
              <%= link_to 'Editar', edit_servico_path(@servico.id), :class=>"btn btn-sm btn-primary" %>
              <%= link_to 'Voltar', servicos_path, :class=>"btn btn-sm btn-default" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
