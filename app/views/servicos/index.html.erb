<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= Servico.model_name.human(count: @servicos.size) %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th><%=Servico.human_attribute_name("descricao")%></th>
              <th><%=Servico.human_attribute_name("preco_hora")%></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @servicos.each do |servico| %>
              <tr>
                <td><%= servico.descricao %></td>
                <td><%= get_valor_formatado servico.preco_hora %></td>
                <td style="width: 3%; text-align: center;">
                  <%= link_to servico, class:"btn btn-primary btn-circle" do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                </td>
                <td style="width: 3%; text-align: center;">
                  <%= link_to edit_servico_path(servico), class:"btn btn-success btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                </td>
                <td style="width: 3%; text-align: center;">
                  <%= link_to servico, method: :delete, data: { confirm: t('messages.confirma_remocao') }, class:"btn btn-danger btn-circle" do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>

      <%= link_to t('buttons.novo'), new_servico_path %>
  </div>
</div>
