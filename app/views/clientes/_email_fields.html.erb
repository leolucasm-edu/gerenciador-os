<div class="nested-fields">
  <div class="form-group field">
    <div class="row">
      <div class="col-md-12">
        <%= f.label :email %>
      </div>
      <div class="col-md-11">
        <%= f.text_field :email, id: :emails_email, :class=>"form-control email-field" %>
      </div>
      <div class="col-md-1">
        <%= link_to_remove_association('', f, class: "btn btn-sm btn-warning fa fa-times")%>
      </div>
    </div>
  </div>
</div>
