<br/>
<div class="row">
  <div class="col-lg-6">
    <%= link_to t('buttons.voltar'), clientes_path, :class=>"btn btn-sm btn-default" %>
    <%= link_to t('buttons.editar'), edit_cliente_path(@cliente.id), :class=>"btn btn-sm btn-primary" %>
  </div>
</div>
<br/>

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
      <%= @operacao %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_with(model: @cliente, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :nome %>
              <%= form.text_field :nome, id: :cliente_nome, :class=>"form-control show", :readonly=>"true" %>
            </div>

            <div class="form-group">
              <%= form.label :cpf_cnpj %>
              <%= form.text_field :cpf_cnpj, id: :cliente_cpf_cnpj, :class=>"form-control show", :readonly=>"true" %>
            </div>

            <div class="form-group">
              <%= form.label :data_nascimento %>
              <%= form.text_field :data_nascimento, id: :cliente_data_nascimento, :class=>"form-control show", :readonly=>"true" %>
            </div>

            <div class="form-group">
              <%= form.label :email %>
              <%= form.text_field :email, id: :cliente_email, :class=>"form-control show", :readonly=>"true" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
