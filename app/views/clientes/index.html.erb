<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Clientes</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                  <th>Nome</th>
                  <th>CPF/CNPJ</th>
                  <th>E-mail</th>
                  <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
              <% @clientes.each do |cliente| %>
                <tr>
                  <td><%= cliente.nome %></td>
                  <td><%= cliente.cpf_cnpj %></td>                  
                  <td><%= cliente.email %></td>
                  <td style="width: 3%; text-align: center;">
                    <%= link_to cliente, class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                  </td>
                  <td style="width: 3%; text-align: center;">
                    <%= link_to edit_cliente_path(cliente), class:"btn btn-success btn-circle" do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                  </td>
                  <td style="width: 3%; text-align: center;">
                    <%= link_to cliente, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-circle" do %>
                      <i class="fa fa-times"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <!-- /.table-responsive -->
    </div>
    <%= link_to 'New Cliente', new_cliente_path %>
  </div>
</div>
<!-- /.row -->
