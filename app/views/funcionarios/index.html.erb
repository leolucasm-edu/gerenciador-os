<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Funcion√°rios</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
        <table class="table table-sm">
            <thead>
                <tr>
                  <th>Nome</th>
                  <th>CPF</th>
                  <th>Email</th>
                  <th>Data de Nascimento</th>
                  <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
              <% @funcionarios.each do |funcionario| %>
                <tr>
                  <td><%= funcionario.nome %></td>
                  <td><%= funcionario.cnpj %></td>
                  <td><%= funcionario.email %></td>
                  <td><%= funcionario.data_nascimento %></td>
                  <td style="width: 3%; text-align: center;">
                    <%= link_to funcionario, class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                  </td>
                  <td style="width: 3%; text-align: center;">
                    <%= link_to edit_funcionario_path(funcionario), class:"btn btn-success btn-circle" do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                  </td>
                  <td style="width: 3%; text-align: center;">
                    <%= link_to funcionario, method: :delete, data: { confirm: t('messages.confirma_remocao') }, class:"btn btn-danger btn-circle" do %>
                      <i class="fa fa-times"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <!-- /.table-responsive -->
    </div>
  </div>
</div>
<!-- /.row -->

<br/>
<div class="row">
  <div class="col-lg-6">
    <%= link_to t('buttons.novo'), new_funcionario_path, :class=>"btn btn-sm btn-primary" %>
  </div>
</div>
