  <body>
    <div id="wrapper">
      <% if user_signed_in? %>
        <%= render partial: "layouts/navbar" %>
        <div id="page-wrapper">
          <br/>
          <%= render "layouts/notices" %>
          <%= yield %>
        </div>
      <% else %>
